<div class="container">
  <h2>Your rankings</h2>
    <ul class="residents list-group">
      <% @rankings.each do |ranking| %>
        <li class="list-group-item">
          <%= link_to "#{ranking.resident_name}'s ranking",
              edit_user_ranking_path(current_user, ranking) %>
          <% if ranking.ever_updated? %>
          <span class='badge'><%= time_ago_in_words(ranking.updated_at) %> old</span>
          <% end %>
        </li>
        <p class="candidate-options"><span class="glyphicon glyphicon-remove"><%= link_to 'remove', user_candidate_path(current_user, ranking), method: :delete %></span></p>
      <% end %>
    </ul>
    <button class="btn btn-default btn-lg"><%= link_to "Search for an address", page_path(:search, :current_user => current_user) %></button>
    <button class="btn btn-success btn-lg"><%= link_to "Your saved addresses", user_candidates_path(current_user) %></button>
    <button class="btn btn-warning btn-lg"><%= link_to "Add an address manually", new_user_candidate_path(current_user)%></button>
</div>
