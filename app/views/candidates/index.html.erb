<div class="container">
<h2>Here are the addresses you're interested in ranking.</h2>
  <ul class="candidates list-group">
    <% @candidates.each do |candidate| %>
      <li class="list-group-item">
        <span class="badge"><%= number_to_currency(candidate.total_rent.to_i, precision: 0) %></span>
        <%= link_to candidate.street,
            user_candidate_path(current_user, candidate) %>
        <span class='when-added'>added <%= time_ago_in_words(candidate.created_at) %> ago</span>
      </li>
      <p class="candidate-options"><span class="glyphicon glyphicon-pencil"><%= link_to 'edit', edit_user_candidate_path(current_user, candidate) %></span>
      <span class="glyphicon glyphicon-remove pull-right"><%= link_to 'remove', user_candidate_path(current_user, candidate), method: :delete %></span></p>
    <% end %>
  </ul>
  <button class="btn btn-lg btn-success"><%= link_to "Rank these addresses", rank_user_candidates_path(current_user) %></button>
  <button class="btn btn-lg btn-default"><%= link_to "Your residents", user_rankings_path(current_user) %></button>
</div>
